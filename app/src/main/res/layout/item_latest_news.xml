<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_new_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_FFFFFF"
    app:cardCornerRadius="@dimen/dp_5">
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15">
    <TextView
        android:id="@+id/txt_new_title"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/sp_18"
        android:minHeight="@dimen/dp_45"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1" />
<FrameLayout
    android:id="@+id/fl_picture"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_width="@dimen/dp_90"
    android:layout_height="@dimen/dp_70">
    <ImageView
        android:id="@+id/img_new_picture"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_70"/>
    <ImageView
        android:id="@+id/img_multipic"
        android:visibility="gone"
        android:layout_gravity="bottom|right"
        android:src="@mipmap/ic_multipic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
